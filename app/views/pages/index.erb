<style>
  .devider { font-size: 300%; padding-top: 40px; padding-bottom: 40px; }

  .site-preview { float: left; padding-right: 20px; width: 200px; height: 200px; overflow: hidden; }
  .site-preview .logo { background: grey; width: 180px; height: 100px }
  .site-preview .description { color: grey; font-size: 80% }
