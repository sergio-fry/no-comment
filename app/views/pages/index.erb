<center><h1>Сейчас обсуждают</h1></center>

<table cellspacing="10px">
  <% for group in Page.published.order("created_at DESC").limit(9).in_groups_of(3, false) %>
    <tr>
      <% for page in group %>
        <td valign="top">
          <div class="article">
            <img src="<%= favicon_url page.domain %>" width="16" height="16" /> <a href="<%= page_path page.url %>"><%= page.title %></a>
          </div>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

