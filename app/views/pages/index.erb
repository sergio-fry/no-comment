<% content_for :meta_description do %>
Здесь можно обсуждать то, что обсуждать запрещено. Владелец сайта запретил комменатрии? Комментировать можно на No Comment!
<% end %>

<style>
  .devider { font-size: 300%; padding-top: 40px; padding-bottom: 40px; }
  p.nl  { clear: both }

  .article-list h2 { font-size: 170% }
  .article-list h2 a { color: black }
  .article-list .article { padding-bottom: 30px }
  .article-list img { margin-right: 10px }
  .article-list .article .domain { font-size: 100% }
</style>


<div class="article-list">
  <% for page in Page.published.with_comments.recent.limit(10) %>
    <div class="article row">
      <div class="col-md-12">
        <h2><a href="<%= page_path page.url %>"><%= page.title %></a></h2>
        <span class="domain"><img src="<%= favicon_url page.domain %>" width="16" height="16" /> <%= page.domain %></span>
        <div class="description">
          <p>
            <% if page.img.present? %>
              <img align="left" src="<%= resize_image page.img, 132, 74 %>" width="132" height="74" />
            <% end %>


            <%= page.text.truncate(212, omission: "…") %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

